<% form_contents = capture do %>
  <% if question.body.present? %>
    <%= question.body %>
  <% end %>

  <% if question.hint.present? %>
    <p><%= question.hint %></p>
  <% end %>

  <%= render "govuk_publishing_components/components/date_input", {
    error_message: question.error,
    items: [
      question.default_day ? nil : {
        label: "Day",
        name: "response[day]",
        width: 2,
        value: question.selected_day,
      },
      question.default_month ? nil : {
        label: "Month",
        name: "response[month]",
        width: 2,
        value: question.selected_month,
      },
      question.default_year ? nil : {
        label: "Year",
        name: "response[year]",
        width: 4,
        value: question.selected_year
      }
    ].compact
  } %>
<% end %>

<%= render "govuk_publishing_components/components/fieldset", {
  legend_text: question.title,
  heading_size: 'm',
  text: form_contents
} %>
