<%
  workplace = calculator.where_do_you_work
%>

<% govspeak_for :pretext do %>
  <% case workplace %>
  <% when "auction_house" %>
    Your workplace should be closed unless you work at a livestock auction house. 
  <% else %>
    Your workplace can be open unless it is inside another building that is closed (for example, inside a spa that is closed and customers cannot access it from outside).
  <% end %>
<% end %>

<% text_for :title do %>
  <% case workplace %>
  <% when "auction_house" %>
    Is your workplace a livestock auction house?
  <% else %>
    Is your workplace inside another closed building?
  <% end %>
<% end %>

<% options(
  "yes": "Yes",
  "no": "No"
) %>
